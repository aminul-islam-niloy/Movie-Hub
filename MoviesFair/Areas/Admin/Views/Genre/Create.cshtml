@model MoviesFair.Models.Genre

<br />
<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <h4 class="text-info">Create Genre </h4>
        <br />
        <form asp-action="Create" method="post">
            <div class="card">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mt-3">
                        <label asp-for="GenreName" class="control-label">Genere Name:</label>
                        <input asp-for="GenreName" class="form-control" />
                        <span asp-validation-for="GenreName" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer mt-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>
        </form>
    </div>
    <div class="col-lg-3"></div>
</div>



@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}





