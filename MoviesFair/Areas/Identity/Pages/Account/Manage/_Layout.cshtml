@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="container d-flex flex-column align-items-center">
    <h1 class="h3 text-center text-primary mt-4 mb-3">Manage Your Account</h1>

    <div class="card w-100 shadow-sm p-3 mb-5  " style="max-width: 800px;">
        <h2 class="h5 text-secondary text-center mb-4">Change Your Account Settings</h2>
        <hr />

        <div class="row">
            <!-- Sidebar Navigation as Card -->
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body p-3">
                        <partial name="_ManageNav" />
                    </div>
                </div>
            </div>

            <!-- Main Content as Card -->
            <div class="col-md-8 mb-4">
                <div class="card">
                    <div class="card-body p-3">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
