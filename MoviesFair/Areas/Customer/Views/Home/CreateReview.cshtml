@model MoviesFair.Models.Review

<h2>Write a Review</h2>

<form asp-action="CreateReview" method="post">
  
    <div class="form-group">
        <label for="comment">Comment:</label>
        <textarea class="form-control" id="comment" name="comment" rows="3" required></textarea>
    </div>
    <div class="form-group">
        <label for="rating">Rating (1-10):</label>
        <input type="number" class="form-control" id="rating" name="rating" min="1" max="10" required>
    </div>
    <input type="hidden" name="movieId" value="@ViewBag.MovieId" /> 
    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>
