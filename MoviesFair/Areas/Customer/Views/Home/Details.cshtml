@model MoviesFair.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>@Model.Name</h4>

    <div class="row">
        <!-- Left side for video -->
        <div class="col-md-8">
            <div class="embed-responsive embed-responsive-16by9">
                <iframe width="720" height="480" src="https://www.youtube.com/embed/VIDEO_ID" frameborder="0" allowfullscreen></iframe>
            </div>
        </div>

        <!-- Right side for photo -->
        <div class="col-md-4">
         
                <img src="~/@Model.Image" class="img-fluid" alt="Movie Image" style="width:100%; height:480px">
      
        </div>
    </div>
    <br />
    <br />

    <dl class="row">



        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>


        <dt class="col-sm-2">Genre</dt>
        <dd class="col-sm-10">@Model.Genre.GenreName</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category.CategoryName</dd>

        <dt class="col-sm-2">Language</dt>
        <dd class="col-sm-10">@Model.Language</dd>

        <dt class="col-sm-2">Year</dt>
        <dd class="col-sm-10">@Model.Year</dd>

        <!-- Add more details here if needed -->
    </dl>

    <div class="text-center">

    <div class="btn-group">
            <a href="#" class="btn btn-success">Download</a>
            <a asp-action="Index" class="btn btn-secondary">Back to Index</a>
    </div>
  

    </div>
</div>
