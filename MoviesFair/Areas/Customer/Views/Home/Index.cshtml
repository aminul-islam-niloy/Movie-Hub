@model MoviesFair.Models.View_Model.IndexPageViewModel

@{
    ViewData["Title"] = "Movie Index";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="search-container">
                <form method="post" action="@Url.Action("Index", "Home")" class="search-form">
                    <div class="input-group">
                        <div class="select-container">
                            <select class="form-control select-option" name="GenreId">
                                <option selected value="0">Genre List</option>
                                @if (ViewData["GenreTypeSearchId"] is SelectList genreList)
                                {
                                    foreach (var genre in genreList)
                                    {
                                        <option value="@genre.Value">@genre.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="input-container">
                            <input placeholder="Search Movies..." type="text" name="searchString" class="form-control">
                        </div>
                        <div class="button-container">
                            <button type="submit" class="btn btn-primary">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <partial name="_MovieListPartial" model="Model.Movies.ToList()" title="All Movies" />

    <!-- Other partial views for different categories -->


    <partial name="_MovieListPartial" model="Model.Action.ToList()" title="Action Movies" />

    <partial name="_MovieListPartial" model="Model.Animation.ToList()" title="Animation Movies" />
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
